<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#a70084" />
            <stroke
                android:width="1dp"
                android:color="#86006a" />
            <corners
                android:radius="0dp" />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#a70084"
                android:endColor="#86006a"
                android:angle="270" />
            <stroke
                android:width="0dp"
                android:color="#86006a" />
            <corners
                android:radius="0dp" />
            <padding
                android:left="2dp"
                android:top="3dp"
                android:right="2dp"
                android:bottom="3dp" />
        </shape>
    </item>
</selector>

