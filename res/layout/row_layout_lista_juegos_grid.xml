<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayoutPublisher"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center"
    android:layout_margin="2dp"
    android:animationCache="true"
    android:background="@drawable/boton_menu_azul"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/TextViewSKU"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/labelNombre"
        android:layout_centerHorizontal="true"
        android:gravity="top|center"
        android:padding="2dp"
        android:text="-   -   -"
        android:textColor="#919598"
        android:textSize="12dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/labelNombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:gravity="center"
        android:lines="2"
        android:maxLines="2"
        android:text="nombre"
        android:textColor="@color/ColorGrisClaro2"
        android:textSize="16dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/TextViewPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TextViewSKU"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:lines="1"
        android:text="-   -    -"
        android:textColor="@color/ColorRosaOscuro"
        android:textSize="16dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewPublisher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TextViewPrice"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:lines="1"
        android:minLines="1"
        android:text="   -     -      - "
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/Blanco"
        android:textSize="10dp" />

    <ImageView
        android:id="@+id/imageViewLinkES"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewPublisher"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/DiezDP"
        android:layout_marginTop="20dp"
        android:adjustViewBounds="true"
        android:background="@drawable/shape_titulo_insercion_gris"
        android:padding="@dimen/TreintaDP"
        android:src="@drawable/es" />

    <ImageView
        android:id="@+id/ImageViewLinkEN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageViewLinkES"
        android:layout_below="@+id/imageViewLinkES"
        android:adjustViewBounds="true"
        android:background="@drawable/shape_titulo_insercion_gris"
        android:padding="@dimen/TreintaDP"
        android:src="@drawable/england" />

</RelativeLayout>